---
import Layout from '../layouts/Layout.astro';

const response = await fetch('https://kings-league-api.emigimenezj.workers.dev/teams');
const teams = await response.json();
---

<Layout title="Welcome to Astro.">
	<strong class="container m-auto">
		<header class="flex">
			{teams.map(({id, image, name}) => (
				<a href={`/teams/${id}`}>
					<img class="aspect-square w-16" src={image} alt={`Escudo del equipo ${name}`} />
				</a>
			))}
		</header>
		<main>

		</main>
	</strong>
</Layout>